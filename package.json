{
  "name": "applura-intro-react",
  "version": "1.0.0",
  "description": "Introductory front-end application using React",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run build:client && npm run build:server && npm run build:assets",
    "build:watch": "webpack --watch",
    "build:client": "webpack --config webpack.config.cjs",
    "build:server": "webpack --config webpack.config.server.cjs",
    "build:assets": "rm -rf dist/static dist/index.html && cp -r public/index.html src/static dist/",
    "dev": "react-scripts start"
  },
  "author": "Applura, Inc",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "prettier": "^3.0.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
